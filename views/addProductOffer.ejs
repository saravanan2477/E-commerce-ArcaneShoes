<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Offer Form</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #6e54a3;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        form {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 12px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            width: 300px;
            text-align: center;
        }

        h2 {
            color: #6e54a3;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin: 10px 0 5px;
            color: #333;
            text-align: left;
        }

        input {
            width: calc(100% - 22px);
            padding: 10px;
            margin-bottom: 15px;
            border: 2px solid #6e54a3;
            border-radius: 6px;
            transition: border-color 0.3s;
        }

        input:focus {
            border-color: #4b367c;
        }

        button {
            width: 100%;
            padding: 12px;
            background-color: #4b367c;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #321f4f;
        }
        .error-message {
            color: #ff0000;
            margin-top: -10px;
            margin-bottom: 10px;
            font-size: 14px;
        }
        #backButton {
    background-color: red;
    color: white;
    border: none;
    padding: 10px 20px;
    cursor: pointer;
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  /* Hover effect */
  #backButton:hover {
    background-color: darkred;
  }
    </style>
</head>
<body>

    <form action="/addProductOffer" method="post" onsubmit="return validateForm()">
        <h2>Add Offer</h2>
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="productName" required>
        <p class="error-message" id="productNameError"></p>

        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="productPrice" required>
        <p class="error-message" id="productPriceError"></p>

        <label for="offerPercentage">Offer Percentage:</label>
        <input type="number" id="offerPercentage" name="offerPercentage" required>
        <p class="error-message" id="offerPercentageError"></p>

        <button type="submit">Add Offer</button>
        
        <button id="backButton">Go Back</button>
    </form>
    <script>
        document.getElementById('backButton').addEventListener('click', function() {
          window.history.back();
        });
        </script>
    <script>
          function validateForm() {
            var productName = document.getElementById("productName").value;
            var productPrice = document.getElementById("productPrice").value;
            var offerPercentage = document.getElementById("offerPercentage").value;

            // Reset error messages
            document.getElementById("productNameError").innerHTML = "";
            document.getElementById("productPriceError").innerHTML = "";
            document.getElementById("offerPercentageError").innerHTML = "";

            // Null validation
            if (!productName.trim()) {
                document.getElementById("productNameError").innerHTML = "Product Name is required";
                return false;
            }

            // Price validation
            if (isNaN(productPrice) || parseFloat(productPrice) <= 0) {
                document.getElementById("productPriceError").innerHTML = "Please enter a valid positive price";
                return false;
            }

            // Discount validation
            if (isNaN(offerPercentage) || offerPercentage < 1 || offerPercentage > 100) {
                document.getElementById("offerPercentageError").innerHTML = "Please enter a valid percentage between 0 and 100";
                return false;
            }

            return true; // Form is valid
        }
        function addOffer() {
            var productName = document.getElementById("productName").value;
            var productPrice = parseFloat(document.getElementById("productPrice").value);
            var offerPercentage = parseFloat(document.getElementById("offerPercentage").value);

            // Calculate the discounted price
            var discountedPrice = productPrice - (productPrice * (offerPercentage / 100));

            // Output or use the data as needed
            console.log("Product Name: " + productName);
            console.log("Original Price: $" + productPrice);
            console.log("Offer Percentage: " + offerPercentage + "%");
            console.log("Discounted Price: $" + discountedPrice.toFixed(2));

            // You can modify this part to send the data to the server or perform other actions
        }
    </script>

</body>
</html>