            <li><a href="/userOrders">Orders</a></li>
            <li><a href="/wishList">wishList</a></li>

            <li><a href="/logout">Logout</a></li>
        </ul>
    </div>
    <div class="user-content">
        <div class="user-details">
            <h2>User Details</h2>
            <p>Name: <%= user.username%></p>
            <p>Email: <%= user.email%></p>
            <!-- Add the Edit Profile button here -->
            <section class="section mb-4 col-md-6 button-section">
                <a href="/editProfile"><button class="btn btn-primary btn-block">Edit Profile</button></a>
              </section>
              <section class="section mb-4 col-md-6 button-section">
                <a href="/changePassword"><button class="btn btn-primary btn-block">Change
                    Password</button></a>
              </section>
        </div>
    </div>

</div>
