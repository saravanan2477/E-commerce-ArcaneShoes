<script>
  document.addEventListener("DOMContentLoaded", function () {
    function updateQuantity(productid, action, index) {
      const quantityElement = document.getElementById(`quantity${index}`);
      const currentQuantity = parseInt(quantityElement.value);
      let newQuantity = action === 'decrease' ? Math.max(1, currentQuantity - 1) : currentQuantity + 1;
      fetch(`/updateQuantity/${productid}`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ productid, index, action }),
      })
        .then(response => response.json())
        .then(data => {
          if (data.error) {
            const errorMessage = data.error;
            const errorElement = document.getElementById(`error${index}`);
            if (errorElement) {
              errorElement.textContent = errorMessage;
            }
          } else if (data.success) {
            quantityElement.value = newQuantity;
            const totalElement = document.getElementById(`total${index}`);
            const subtotalElement = document.getElementById('subtotal');
            const totalAmountElement = document.getElementById('total');
            if (totalElement && subtotalElement && totalAmountElement) {
              totalElement.innerText = `₹${data.updatedCartItem.itemTotal}`;
              subtotalElement.innerText = `₹${data.subtotal}`;
              totalAmountElement.innerText = `₹${data.total}`;
            }
          } else {
            console.error(data.error);
          }
        })
        .catch(error => console.log(error));
    }
    const decreaseButtons = document.querySelectorAll('.decrease');
    const increaseButtons = document.querySelectorAll('.increase');
    decreaseButtons.forEach(button => {
      button.addEventListener('click', function (e) {
        e.preventDefault();
        const productId = this.dataset.productId;
        const index = this.dataset.index;
        updateQuantity(productId, 'decrease', index);
      });
    });
    increaseButtons.forEach(button => {
      button.addEventListener('click', function (e) {
        e.preventDefault();
        const productId = this.dataset.productId;
        const index = this.dataset.index;
        updateQuantity(productId, 'increase', index);
      });
    });
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
  document.addEventListener("DOMContentLoaded", function () {
      // Find all elements with the class 'btn-remove-from-cart'
      const removeFromCartButtons = document.querySelectorAll(".btn-remove-from-cart");
  
      // Loop through each remove from cart button
      removeFromCartButtons.forEach(button => {
          // Add a click event listener to each remove from cart button
          button.addEventListener("click", function (e) {
              // Prevent the default action (following the link)
              e.preventDefault();
  
              // Get the product ID from the data attribute
              const productId = this.getAttribute("data-product-id");
  
              // Show the SweetAlert confirmation dialog
              Swal.fire({
                  title: "Remove from Cart",
                  text: "Are you sure you want to remove this product from your cart?",
                  icon: "warning",
                  showCancelButton: true,
                  confirmButtonText: "Yes, remove",
                  cancelButtonText: "No, cancel"
              }).then((result) => {
                  // If the user confirms removing from cart
                  if (result.isConfirmed) {
                      // Redirect to the remove from cart page with the product ID
                      window.location.href = "/removecart/" + productId;
                  }
              });
          });
      });
  });
  </script>

