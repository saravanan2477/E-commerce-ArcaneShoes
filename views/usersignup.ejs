  <body>
    <div class="limiter">
      <div class="container-login100">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
          <form
            id="signupForm"
            class="login100-form validate-form"
            action="/usersignuppost"
            method="post"
            onsubmit="return validateForm()"
          >
            <span class="login100-form-title p-b-49"> Sign Up </span>

            <div
              class="wrap-input100 validate-input m-b-23"
              data-validate="Username is required"
            >
              <span class="label-input100">Username</span>
              <input
                class="input100"
                type="text"
                id="username"
                name="username"
                placeholder="Type your username"
              />
              <span class="input-icon"><i class="fa fa-user"></i></span>
              <!-- Icon -->
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Email is required"
            >
              <span class="label-input100">Email</span>
              <input
                class="input100"
                type="email"
                id="email"
                name="email"
                placeholder="Type your email"
              />
              <span class="input-icon"><i class="fa fa-envelope"></i></span>
              <!-- Icon -->
            </div>
            <div
              class="wrap-input100 validate-input"
              data-validate="Phone Number is required"
            >
              <span class="label-input100">Phone Number</span>
              <input
                class="input100"
                type="phone"
                id="phone"
                name="phone"
                placeholder="Type your Phone Number"
              />
              <span class="input-icon"><i class="fa fa-mobile"></i></span>
              <!-- Icon -->
            </div>

            <div
              class="wrap-input100 validate-input"
              data-validate="Password is required"
            >
              <span class="label-input100">Password</span>
              <input
                class="input100"
                type="password"
                id="password"
                name="password"
                placeholder="Type your password"
              />
              <span class="input-icon"><i class="fa fa-lock"></i></span>
              <!-- Icon -->
            </div>

            <div class="wrap-input100 validate-input" data-validate="">
              <span class="label-input100">Referal Code (Optional)</span>
              <input
                class="input100"
                type="Referal"
                id="referralcode"
                name="referralcode"
                placeholder="Type your Referal Code"
              />
              <span class="input-icon"><i class="fa fa-lock"></i></span>
              <!-- Icon -->
            </div>

            <br />
            <div
              id="errorMessage"
              class="alert alert-danger"
              role="alert"
              style="display: none; color: red"
            ></div>

            <div class="container-login100-form-btn">
              <div class="wrap-login100-form-btn">
                <div class="login100-form-bgbtn"></div>
                <button class="login100-form-btn" type="submit">Sign Up</button>
              </div>
            </div>

            <!-- Add this div to display the error message -->

            <div class="flex-c-m">
              <div class="flex-c-m">
                <% if (errorMessage) { %>
                <div class="alert alert-danger" role="alert" style="color: red">
                  <%= errorMessage %>
                </div>
                <% } %>
              </div>

              <!-- <a href="#" class="login100-social-item bg1">
                            <i class="fab fa-facebook"></i>
                        </a> -->
              <!-- <a href="#" class="login100-social-item bg3">
                            <i class="fab fa-google"></i>
                        </a> -->
            </div>
            <div class="flex-col-c p-t-155">
              <span class="txt1 p-b-17"> Or Login Using </span>

              <a href="/userlogin" class="txt2"> Login </a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script>function validateForm() {
        var username = document.getElementById("username").value;
        var email = document.getElementById("email").value;
        var phone = document.getElementById("phone").value;
        var password = document.getElementById("password").value;
        var errorMessage = document.getElementById("errorMessage");
    
        // Check if any field is empty
        if (username.trim() === "" || email.trim() === "" || phone.trim() === "" || password.trim() === "") {
            errorMessage.textContent = "All fields are required";
            errorMessage.style.display = "block"; // Show the error message
            return false; // Prevent form submission
        }
    
        // Validate username length
        if (username.length < 2) {
            errorMessage.textContent = "Username must be at least 2 characters long";
            errorMessage.style.display = "block"; // Show the error message
            return false; // Prevent form submission
        }
    
        // Validate email format using regex
        var emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(email)) {
            errorMessage.textContent = "Invalid email address";
            errorMessage.style.display = "block"; // Show the error message
            return false; // Prevent form submission
        }
    
        // Validate password strength using regex
        var passwordRegex = /^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[@#$%^&*()_+\-=[\]{};':"\\|,.<>/?]).{6,}$/;
        if (!passwordRegex.test(password)) {
            errorMessage.textContent = "Password must contain one capital letter,Number and must be atleast 7 charecters ";
            errorMessage.style.display = "block"; // Show the error message
            return false; // Prevent form submission
        }
    
        // If all validations pass, clear error message and allow form submission
        errorMessage.textContent = ""; // Clear previous error message
        errorMessage.style.display = "none"; // Hide the error message
        return true; // Allow form submission
    }
    
    </script>

