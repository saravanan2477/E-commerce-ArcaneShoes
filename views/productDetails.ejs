<body>



   
    

    
    <%- include('sidenav') %>

   <br>
    <!-- Main Content -->
    <div class="card-wrapper mt-5">
        <div class="card">
            <!-- Card left -->
            <div class="product-imgs">
                <div class="img-display">
                    <div class="img-showcase mb-4">
                        <% product.image.forEach(function(imageSrc, index) { %>
                            <img style="height: 70vh; width: 5vw;" id="myimage<%= index %>" class="big_img" src="<%= imageSrc %>" alt="shoe image">
                            <% }); %>
                    </div>
                </div>
                <div class="img-select">
                    <% product.image.forEach(function(imageSrc, index) { %>
                        <div class="img-item">
                            <a href="#" data-id="<%= index + 1 %>">
                                <img style="height: 20vh; width: 9rem;" src="<%= imageSrc %>" alt="shoe image">
                            </a>
                        </div>
                        <% }); %>
                </div>
            </div>

            <!-- Card right -->
            <div class="product-content">
                <h2 class="product-title">
                    <%= product.productname %>
                </h2>
                <h4 class="product-title">
                    <%= product.category.category %>
                </h4>
                <!-- <div class="product-rating">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star-half-alt"></i>
                    <span>5(21)</span>
                </div> -->
                <div class="product-price">
                    <% if (poffer && poffer.productoffer > 0 && discountamount > 0) { %>
                        <% if (discountamount >= poffer.productoffer) { %>
                            
                            
                            <p class="last-price">Old Price: <span>₹<%= product.price %>.00</span></p>
                            <p class="offer-price">Offer: <%= discountamount %> Off</p>
                            <p class="new-price">New Price: ₹<%= discount %></p>
                        <% } else { %>
                            

                            <p class="last-price">Old Price: <span>₹<%= product.price %>.00</span></p>
                            <p class="offer-price">Offer: <%= poffer.productoffer %>% Off</p>
                            <p>Discount Amount: ₹<%= discountamount %></p>
                            <p class="new-price">New Price: ₹<%= discount %></p>
                        <% } %>
                    <% } else if (poffer && poffer.productoffer > 0) { %>
                        
                        <p class="last-price">Old Price: <span>₹<%= product.price %>.00</span></p>
                        <p class="offer-price">Offer: <%= poffer.productoffer %>% Off</p>
                        <p class="new-price">New Price: ₹<%= discount %></p>
                    <% } else if (discountamount > 0) { %>
                        

                        <p class="last-price">Old Price: <span>₹<%= product.price %>.00</span></p>
                        <p>Discount Amount: ₹<%= discountamount %></p>
                        <p class="new-price">New Price: ₹<%= discount %></p>
                    <% } else { %>
                        <!-- Display a message if there is no offer or if productoffer is null -->
                        <p>No offer available for this product</p>
                        <!-- Display the original price as total price when there's no offer -->
                        <p class="total-price">Total Price: ₹<%= product.price %></p>
                    <% } %>
                </div>
                
                
                

                <div class="product-detail">
                    <h2>About this item:</h2>
                    <p><%= product.description %></p>
                    <% if (product.stock === 0) { %>
                        <h4 style="color: red;">Out of Stock</h4>
                    <% } else { %>
                        <p>Stock: <%= product.stock %></p>
                    <% } %>
                </div>

                <div class="purchase-info">
                    <% if (product.stock === 0) { %>
                      <button class="btn btn-info float-end" disabled>Add To Cart</button>
                    <% } else { %>
                      <a href="/addcart/<%= product._id %>" class="btn btn-info float-end">Add To Cart</a>
                    <% } %>
                  
                    <% if (isInWishlist) { %>
                      <a href="/removeFromWishlist/<%= product._id %>" class="btn btn-warning float-end">Remove from Wishlist</a>
                    <% } else { %>
                      <a href="/Wishlist/<%= product._id %>" class="btn btn-info float-end">Add To Wishlist</a>
                    <% } %>
                  </div>
                  
                  
            </div>
        </div>
      
    </div>
    



<br>
<div><h2 style=" text-align: center;">Related Products</h2></div>

    <div class="related d-flex   ">
        <% relatedProducts.slice(0, 3).forEach(function(relatedProduct) { %>
            <div class="row1">
                <a href="/getproduct/<%= relatedProduct._id %>">
                    <img src="<%= relatedProduct.image[0] %>" class="card-img" alt="Related Product Image">
                </a>
                <div class="cardbody">
                    <h5 class="cardtitle"><%= relatedProduct.productname %></h5>
                    <p class="cardtext">Price: ₹<%= relatedProduct.price %></p>
                    <a href="/getproduct/<%= relatedProduct._id %>" class="btnn btnprimary">view</a>
                </div>
            </div>
        <% }); %>
      </div>



    <!-- Footer -->
		<%- include('sidefooter') %>
    

    <!-- Scripts -->
    <script>
        const imgs = document.querySelectorAll('.img-select a');
        const imgBtns = [...imgs];
        let imgId = 1;

        imgBtns.forEach((imgItem) => {
            imgItem.addEventListener('click', (event) => {
                event.preventDefault();
                imgId = imgItem.getAttribute('data-id');
                slideImage();
            });
        });

        function slideImage() {
            const displayWidth = document.querySelector('.img-showcase img:first-child').clientWidth;
            document.querySelector('.img-showcase').style.transform = `translateX(${- (imgId - 1) * displayWidth}px)`;
        }

        window.addEventListener('resize', slideImage);
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.big_img').imagezoomsl({
                zoomrange: [2, 2]
            });
        })
    </script>










