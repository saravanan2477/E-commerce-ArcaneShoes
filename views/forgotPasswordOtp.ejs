<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>OTP Verification</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style media="screen">
    body {
      background-image: url('/image/back.png');
      background-size: cover;
      margin: 0;
      padding: 0;
      font-family: 'Poppins', sans-serif;
      color: #ffffff;
    }
    .otp-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 90vh;
    }
    .otp-box {
      background-color: rgba(255, 255, 255, 0.13);
      border-radius: 10px;
      backdrop-filter: blur(10px);
      border: 2px solid rgba(255, 255, 255, 0.1);
      box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
      padding: 50px;
      text-align: center;
    }
    .otp-box h3 {
      font-size: 32px;
      font-weight: 500;
      margin-bottom: 30px;
    }
    .otp-input {
      width: 25px;
      height: 30px;
      font-size: 18px;
      margin: 0 5px;
      text-align: center;
      color: #FF5733;
      border: 2px solid #FF5733;
    }
    .otp-submit {
      margin-top: 15px;
      width: 200px;
      padding: 10px 0;
      font-size: 18px;
      font-weight: 600;
      border-radius: 5px;
      cursor: pointer;
      background-color: #FF5733;
      color: #080710;
      border: none;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }
    #timer {
      color: #d80f0f;
      font-size: 18px;
      margin-top: 15px;
    }
    .error-message {
      color: #FF0000;
      font-size: 14px;
      margin-top: 5px;
    }
  </style>
</head>
<body>
  <div class="otp-container">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="otp-box text-center p-4 mt-md-5">
            <h3 style="color: #FF5733;">Enter OTP</h3>


            <form id="otpForm" action="/forgotPasswordConfirm" method="post">
              <div id="otp-error" class="input-group justify-content-center">
                <input type="text" name="otp" id="otp-input" class="form-control otp-input" maxlength="6" pattern="\d{6}" title="Please enter a  6-digit OTP" >
                <% if (typeof errorMessage !== 'undefined' && errorMessage) { %>
                  <div class="error-message"><%= errorMessage %></div>
                <% } %>
              </div>
              <div id="timer" class="text-red mt-3">Resend OTP in: <span id="countdown"></span> seconds</div>
              <button type="submit" class="btn btn-success mt-3">Verify</button>
            </form>
            <a href="/resendOtps">
              <button id="resendBtn" class="btn btn-success mt-3">Resend OTP</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var countdown =   60;

      function startTimer() {
        document.getElementById('timer').style.display = 'block';
        var timer = setInterval(function () {
          countdown--;
          document.getElementById('countdown').textContent = countdown;

          if (countdown <=   0) {
            clearInterval(timer);
            document.getElementById('countdown').style.display = 'none';
            document.getElementById('resendBtn').style.display = 'block';
          }
        },   1000);
      }

      startTimer();

    
    });
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
